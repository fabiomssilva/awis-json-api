{
    "extends": "airbnb-base",
    "env": {
        "jest": true
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "eol-last": 0,
        "indent": ["error", 4],
        "arrow-parens": "off",
        "yoda": [
            "off"
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "never"
            }
        ],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "max-len": [
            "error",
            140,
            {
                "ignoreComments": true
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "minProperties": 5,
                "consistent": true
            }
        ],
        "implicit-arrow-linebreak": [
            "off"
        ]
    }
}